<?xml version="1.0" encoding="UTF-8"?>
<modification>
    <id>Replace the css property in heading title in Home page</id>
    <version>1.0</version>
    <vqmver>2.X</vqmver>
    <author>Omise</author>
    <file name="admin/view/template/common/header.tpl">
        <operation info="Add Omise menu into admin menu bar">
            <search position="after"><![CDATA[<ul class="right" style="display: none;">]]></search>
            <add><![CDATA[
                <li id="omise"><a class="top">Omise</a>
                    <ul>
                        <li><a href="http://www.opencart.com" target="_blank">Dashboard</a></li>
                    </ul>
                </li>
            ]]></add>
        </operation>

        <operation info="Add Omise admin js into admin header.tpl">
            <search position="before"><![CDATA[</head>]]></search>
            <add><![CDATA[<script src="view/javascript/omise/omise-opencart-admin.js"></script>]]></add>
        </operation>
   </file>
</modification>